generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  
  moduleFormat = "cjs" // temporarily added to prevent TS2742, see https://github.com/prisma/prisma/issues/28664
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String
  lastName String
  email String @unique
  passwordHash String
}